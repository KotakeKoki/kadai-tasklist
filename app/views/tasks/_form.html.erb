<%= form_with(model: task, local: true) do |f| %>
<%= render 'layouts/error_messages',model: f.object%>
  <%= f.label :status, 'ステータス' %>
  <%= f.text_field :status %>

  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %>
  <%= f.hidden_field :user_id, value: current_user.id %>

  <%= f.submit '投稿' %>
<% end %>